<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="@dimen/_10sdp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tabby_way_title"
            style="@style/textFontBoldStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_11sdp"
            tools:text="tabby title"
            android:theme="@style/textDirectionStyle" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tabby_way_desc"
            style="@style/textFontbookStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_50sdp"
            android:layout_below="@+id/tabby_way_title"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/normal_text"
            tools:text="بدون رسوم أو فوائد أو قسمها على 4 دفعات شهرية بقيمة *X*"
            android:theme="@style/textDirectionStyle" />

        <ImageView
            android:id="@+id/tabby_image"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:src="@color/red" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tabby_see_more"
            style="@style/textFontbookStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_below="@+id/tabby_way_desc"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:textColor="@color/blue"
            android:textSize="@dimen/normal_text"
            android:clickable="true"
            android:text="@string/see_more"
            android:theme="@style/textDirectionStyle" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/product_details_delimiter_height"
        android:background="@color/original_gray" />
</LinearLayout>