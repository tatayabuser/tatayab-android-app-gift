<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="7dp"
    android:layout_marginEnd="7dp"
    android:foregroundGravity=""
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/kwItem"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="wrap_content"
         android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
         android:foregroundGravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_logo_kw"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:background="@drawable/ic_kuwait"
            android:gravity="center_horizontal"
            android:padding="5dp"
             android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/country_name_kw"
            style="@style/textFontMeduimStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:gravity="center"
            android:text="@string/kuwait"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/_10sdp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/saItem"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="wrap_content"
         android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        android:foregroundGravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_logo_sa"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:background="@drawable/saudi_arabia"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/country_name_sa"
            style="@style/textFontMeduimStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:gravity="center"
            android:text="@string/saudi_arabia"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/_10sdp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/qaItem"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="wrap_content"
         android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        android:foregroundGravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_logo_qa"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:background="@drawable/ic_qatar"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/country_name_qa"
            style="@style/textFontMeduimStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:gravity="center"
            android:text="@string/qatar"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/_10sdp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/otherItem"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="wrap_content"
         android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        android:foregroundGravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_logo_other"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:background="@drawable/ic_world"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/country_name_other"
            style="@style/textFontMeduimStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:gravity="center"
            android:text="@string/other"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/_10sdp"
          />

    </LinearLayout>

</LinearLayout>