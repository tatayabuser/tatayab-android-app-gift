<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/appbar"
        layout="@layout/toolbar_with_back" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_80sdp"
         android:layout_below="@+id/appbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contact_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:background="@color/white"
             android:paddingStart="@dimen/_20sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tv_title"
                style="@style/textDirectionStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_9sdp"
                android:gravity="start|center_vertical"
                android:text="@string/spread_the_joy"
                android:textColor="@color/focia"
                android:textSize="@dimen/_14sdp"
                android:theme="@style/textFontbookStyle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tv_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="start|center_vertical"
                android:text="@string/refer_a_friend_amp_earn_5_kd"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/_16sdp"
                android:theme="@style/textFontMeduimStyle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_title" />


            <ImageView
                android:id="@+id/refer_image"
                android:layout_width="0dp"
                android:layout_height="@dimen/_180sdp"
                android:layout_marginTop="24dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_refer_friend_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_description" />


            <TextView
                android:id="@+id/tv_title2"
                style="@style/textDirectionStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="start|center_vertical"
                android:text="@string/earn_5_kd_to_use_on_your_next_orders"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/larg_text"
                android:theme="@style/textFontMeduimStyle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/refer_image" />


            <TextView
                android:id="@+id/tv_invite_friend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@color/white"
                android:drawablePadding="@dimen/_10sdp"
                android:gravity="start|center_vertical"
                android:text="@string/invite_friend"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/mini_larg_text"
                app:drawableStartCompat="@drawable/invite_friend"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_title2" />


            <TextView
                android:id="@+id/friends_gift"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_9sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:gravity="start|center_vertical"
                android:text="@string/friends_get_5_kd_off_when_they_register_and_place_first_order"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/mini_larg_text"
                app:drawableStartCompat="@drawable/friend_gift"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_invite_friend" />


            <TextView
                android:id="@+id/your_gift"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_9sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:gravity="start|center_vertical"
                android:text="@string/you_get_5_kwd_credit_when_they_order"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/mini_larg_text"
                app:drawableStartCompat="@drawable/your_gift"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/friends_gift" />


            <TextView
                android:id="@+id/refer_full_desc"
                android:layout_width="0dp"
                 android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:lineSpacingExtra="10sp"
                android:text="@string/refer_friend_description"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                android:theme="@style/textFontMeduimStyle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/your_gift" />

            <TextView
                 android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_60sdp"
                 android:text="@string/credit_is_valid_for_30_days"
                android:textColor="@color/focia"
                android:gravity="center"
                android:textSize="@dimen/mini_larg_text"
                android:textStyle="normal"
                android:theme="@style/textFontMeduimStyle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/refer_full_desc" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


    <LinearLayout
        android:id="@+id/refer_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:background="@color/original_gray"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_dark" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/inviteFriendButton"
            style="@style/SubmitButton"
            android:layout_width="match_parent"
             android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:text="@string/refer_friend"
            android:textSize="@dimen/larg_text"
            android:layout_marginTop="@dimen/_5sdp"
             android:visibility="visible" />

    </LinearLayout>

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/base_loading"
        style="@style/AVLoadingIndicatorView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:padding="@dimen/_8sdp"
        android:visibility="gone"
        app:indicatorColor="@color/dark_blue"
        app:indicatorName="BallClipRotateMultipleIndicator" />

</RelativeLayout>