<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/conciergeView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/_10sdp"
    android:paddingBottom="@dimen/_5sdp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        style="@style/textFontMeduimStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/block_title"
        android:theme="@style/textDirectionStyle"
         android:text="@string/our_services" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_description"
        style="@style/textFontbookStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:textColor="@color/description_color"
        android:textSize="@dimen/block_description"
        android:theme="@style/textDirectionStyle"
         android:text="@string/bringing_to_you_special_tatayab_services" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:paddingBottom="@dimen/_10sdp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/iv_banner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_concierge_bg" />
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_concierge_title"
                style="@style/textFontMeduimStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:gravity="center"
                android:text="@string/tatayab_concierge"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/block_title"
                android:theme="@style/textDirectionStyle" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_concierge_description"
                style="@style/textFontbookStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_concierge_title"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:text="@string/concierge_description"
                android:textColor="@color/color_light_yellow"
                android:textSize="@dimen/block_description"
                android:theme="@style/textDirectionStyle" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/conciergeButtonAction"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_concierge_description"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/button_white_bg"
                android:paddingStart="@dimen/_15sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingEnd="@dimen/_15sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text="@string/call_to_action"
                android:textAllCaps="false"
                android:textColor="@color/color_light_yellow" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>