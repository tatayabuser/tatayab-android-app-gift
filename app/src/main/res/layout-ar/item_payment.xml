<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/paymentItemView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center|start"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:gravity="center|start"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/methodImageView"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:checked="true"
            android:clickable="false"
            android:src="@drawable/knet"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_payment_name"
            style="@style/customFont"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_weight="1"
            android:theme="@style/textDirectionStyle"
            android:iconifiedByDefault="true"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/_10sdp"
            tools:text="الدفع عند الاستلام" />


        <ImageView
            android:id="@+id/radio_payment"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:checked="true"
            android:clickable="false"
            android:src="@drawable/not_primary_img"
            android:theme="@style/addressRadioButton"
            android:visibility="visible" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_payment_fees"
        style="@style/customFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_45sdp"
        android:gravity="start"
        android:layout_marginBottom="@dimen/_5sdp"
        android:iconifiedByDefault="true"
        android:textColor="@color/dark_blue"
        android:textSize="@dimen/mini_normal_text"
        tools:text="20,22 KD" />
</LinearLayout>