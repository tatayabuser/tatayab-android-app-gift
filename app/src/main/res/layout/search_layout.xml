<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:id="@+id/search_container"
    android:background="@drawable/round_search"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/search_txt"
        android:layout_width="0dp"
        android:layout_height="@dimen/_30sdp"
        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="@dimen/_5sdp"
        android:focusable="true"
        android:textSize="@dimen/_10sdp"
        android:background="@null"
        style="@style/SerachEditTextStyleOutline"
        android:hint="@string/search_about"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:paddingStart="@dimen/_5sdp"
        app:layout_constraintEnd_toStartOf="@+id/delete_search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/delete_search"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30sdp"
        android:visibility="invisible"
        android:src="@drawable/com_facebook_close"
        android:layout_marginEnd="@dimen/_5sdp"
        app:layout_constraintTop_toTopOf="@+id/search_txt"
        app:layout_constraintBottom_toBottomOf="@+id/search_txt"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>