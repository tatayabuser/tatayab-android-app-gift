<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sort_based"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:textSize="@dimen/_15sdp"
        android:textColor="@color/dark_blue"
        android:theme="@style/textFontMeduimStyle"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/sort_based"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintTop_toBottomOf="@+id/sort_based"
        android:id="@+id/view_delimiter"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:gravity="center_vertical"
        android:padding="@dimen/_15sdp"
        android:id="@+id/last_reviews"
        app:layout_constraintTop_toBottomOf="@+id/view_delimiter"
        android:text="@string/last_review"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:gravity="center_vertical"
        android:padding="@dimen/_15sdp"
        android:id="@+id/high_review"
        app:layout_constraintTop_toBottomOf="@+id/last_reviews"
        android:text="@string/high_review"
        />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:gravity="center_vertical"
        android:padding="@dimen/_15sdp"
        android:id="@+id/low_review"
        app:layout_constraintTop_toBottomOf="@+id/high_review"
        android:text="@string/low_review"
        />
</androidx.constraintlayout.widget.ConstraintLayout>