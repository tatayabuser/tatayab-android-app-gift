<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/rate_owner"
        style="@style/textFontMeduimStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/mini_larg_text"
        android:theme="@style/textDirectionStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Ali Mohsen " />

    <RatingBar
        android:id="@+id/user_rate"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:progressTint="@color/colorPrimary"
        app:layout_constraintStart_toEndOf="@+id/rate_owner"
        app:layout_constraintTop_toTopOf="@+id/rate_owner"
        app:layout_constraintBottom_toBottomOf="@+id/rate_owner"
        tools:rating="5" />


    <TextView
        android:id="@+id/rate_coment"
        style="@style/textFontMeduimStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_1sdp"
        android:textColor="@color/dark_blue"
        android:textSize="@dimen/mini_larg_text"
        android:theme="@style/textDirectionStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/rate_owner"
        app:layout_constraintTop_toBottomOf="@+id/rate_owner"
        tools:text="منتج حلو جدا " />

    <TextView
        android:id="@+id/rate_date"
        style="@style/textFontbookStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:textSize="@dimen/normal_text"
        android:textColor="@color/color_checkout_hint"
        app:layout_constraintStart_toStartOf="@+id/rate_coment"
        app:layout_constraintTop_toBottomOf="@+id/rate_coment"
        tools:text="12/11/2019" />

</androidx.constraintlayout.widget.ConstraintLayout>