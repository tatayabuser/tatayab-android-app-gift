<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatRadioButton
        android:id="@+id/selectedCountryRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawablePadding="0dp"
        android:gravity="center_vertical|center_horizontal"
        android:minWidth="0dp"
        android:clickable="false"
        android:checked="true"
        android:minHeight="0dp"
        android:buttonTint="@color/colorPrimary"
        android:layout_marginEnd="@dimen/_10sdp"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/list_item_country_logo"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="@dimen/_24sdp"
        android:src="@drawable/flag_bh"
        app:civ_border_overlay="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/country_name"
        style="@style/textFontbookStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:textColor="@color/dark_blue"
        android:textSize="@dimen/mini_larg_text"
        app:layout_constraintBottom_toBottomOf="@id/list_item_country_logo"
        app:layout_constraintStart_toEndOf="@id/list_item_country_logo"
        app:layout_constraintTop_toTopOf="@id/list_item_country_logo"
        tools:text="Alphabet text" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/_24sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_24sdp"
        android:background="@color/original_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_item_country_logo" />


</androidx.constraintlayout.widget.ConstraintLayout>