<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/round_product"
    android:id="@+id/constraint_product_item"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_account"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_9sdp"
        android:background="@color/original_gray"
        android:gravity="start|center_vertical"
        android:theme="@style/textFontMeduimStyle"
        android:textSize="@dimen/mini_larg_text"
        android:paddingStart="@dimen/account_title_padding"
        android:paddingRight="@dimen/account_title_padding"
        android:text="@string/my_account"
        android:textColor="@color/dark_blue"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/profile"
        android:layout_width="0dp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_9sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@color/white"
        android:drawableStart="@drawable/profile"
        android:drawableEnd="@drawable/arrow_right_icon_layer"
        android:drawablePadding="@dimen/_10sdp"
        android:gravity="start|center_vertical"
        android:text="@string/my_profile"
        android:textColor="@color/black"
        android:textSize="@dimen/_10sdp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_account" />


    <View
        android:id="@+id/view_after_profile"
        android:layout_width="0dp"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/gray"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile"
        app:layout_constraintWidth_percent="0.9" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/orders"
        android:layout_width="0dp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginEnd="16dp"
        android:background="@color/white"
        android:drawableStart="@drawable/ic_order"
        android:drawableEnd="@drawable/arrow_right_icon_layer"
        android:drawablePadding="18dp"
        android:gravity="start|center_vertical"
        android:text="@string/my_orders"
        android:textColor="@color/dark_blue"
        style="@style/textFontbookStyle"
        android:textSize="@dimen/mini_larg_text"
        android:layout_marginStart="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_after_profile" />

    <View
        android:id="@+id/view_after_orders"
        android:layout_width="0dp"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="3dp"
        app:layout_constraintStart_toStartOf="@+id/orders"
        app:layout_constraintTop_toBottomOf="@+id/orders"
        app:layout_constraintWidth_percent="0.9" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/addresses"
        android:layout_width="0dp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@color/white"
        android:drawableStart="@drawable/ic_addresses"
        android:drawableEnd="@drawable/arrow_right_icon_layer"
        android:drawablePadding="18dp"
        android:gravity="start|center_vertical"
        android:text="@string/saved_address"
        android:textColor="@color/dark_blue"
        style="@style/textFontbookStyle"
        android:textSize="@dimen/mini_larg_text"
        app:layout_constraintEnd_toEndOf="@+id/orders"
        app:layout_constraintStart_toStartOf="@+id/orders"
        app:layout_constraintTop_toBottomOf="@+id/view_after_orders" />
</androidx.constraintlayout.widget.ConstraintLayout>


