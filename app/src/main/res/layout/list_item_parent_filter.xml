<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_4sdp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/filterTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"
        android:textColor="@color/black"
        android:textSize="@dimen/mini_larg_text"
        android:theme="@style/textDirectionStyle"
        tools:text="Supplier" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/filterValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:theme="@style/textFontbookStyle"
        style="@style/textDirectionStyle"
        android:drawableEnd="@drawable/ic_arrow_lr"
        android:drawablePadding="@dimen/_10sdp"
        android:gravity="center_vertical"
        android:text="@string/all_options"
        android:textSize="@dimen/mini_larg_text" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@+id/filterValueTextView"
        android:layout_marginTop="8dp"
        android:background="@color/gray_light" />


</RelativeLayout>
