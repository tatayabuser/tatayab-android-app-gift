<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/_7sdp">

    <TextView
        android:id="@+id/labelKeyTextView"
        style="@style/customFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:iconifiedByDefault="true"
        android:textColor="@color/dark_blue"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold"
        tools:text="Total(5 items)" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/notesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textFontMeduimStyle"
        android:layout_below="@+id/labelKeyTextView"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="@color/gray_dark"
        android:textSize="@dimen/mini_larg_text"
        android:visibility="gone"
        tools:text="include vat " />

    <TextView
        android:id="@+id/labelValueTextView"
        style="@style/customFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/_10sdp"
        android:iconifiedByDefault="true"
        android:textColor="@color/dark_blue"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold"
        tools:text="108.000 KD" />

</RelativeLayout>