<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="select perfum : "
        android:id="@+id/specific_title"
        app:layout_constraintWidth_percent="0.43"
        android:textSize="@dimen/specific_text"
        style="@style/textFontMeduimStyle"
        android:textColor="@color/specific_color"
        android:theme="@style/textDirectionStyle"
        android:layout_margin="@dimen/_8sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="hint_select_perfum"
        android:id="@+id/specific_value"
        android:textColor="@color/dark_blue"
        style="@style/textDirectionStyle"
        android:theme="@style/textFontbookStyle"
        android:textSize="@dimen/mini_large_text"
        android:layout_margin="@dimen/_8sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/specific_title"
        />

</androidx.constraintlayout.widget.ConstraintLayout>