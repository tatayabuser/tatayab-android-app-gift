<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_width="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/round_unselected_option"
    android:layout_gravity="center_vertical"
    android:layout_height="wrap_content">

    <RadioButton
        android:id="@+id/rb_option_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        style="@style/RadioTheme"
        android:checked="false"
        android:clickable="false"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="30dp"
        android:id="@+id/option_image"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rb_option_selected"
        tools:src="@drawable/address"
        />

    <TextView
        android:id="@+id/spinner_option_name"
        android:layout_width="0dp"
        android:gravity="center_vertical"
        android:textSize="@dimen/_12sdp"
        android:padding="@dimen/_8sdp"
        tools:text="sfaesddssssssssssf"
        app:layout_constraintTop_toTopOf="@+id/option_image"
        app:layout_constraintBottom_toBottomOf="@+id/option_image"
        app:layout_constraintStart_toEndOf="@+id/option_image"
        android:textColor="@color/colorPrimary"
        android:layout_height="wrap_content"
        />

</androidx.constraintlayout.widget.ConstraintLayout>