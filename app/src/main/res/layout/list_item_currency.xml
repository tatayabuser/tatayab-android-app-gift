<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/ic_country_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/list_item_country_logo"
        android:layout_marginStart="@dimen/_10sdp"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/_11sdp"
        android:gravity="start|center_vertical"
        app:layout_constraintTop_toTopOf="@id/list_item_country_logo"
        app:layout_constraintBottom_toBottomOf="@id/list_item_country_logo"
        app:layout_constraintStart_toEndOf="@id/list_item_country_logo"
        android:id="@+id/currency_name"
        tools:text="KWD"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="@dimen/_2sdp"
        android:textSize="@dimen/_11sdp"
        />


    <androidx.appcompat.widget.AppCompatRadioButton
        android:id="@+id/selected_currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawablePadding="0dp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:visibility="gone"
        android:gravity="center_vertical|center_horizontal"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_2sdp"
        app:layout_constraintTop_toBottomOf="@+id/currency_name"
        />


</androidx.constraintlayout.widget.ConstraintLayout>