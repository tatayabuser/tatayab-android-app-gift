<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/gothamhtf_book</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

    </style>

    <style name="BottomTabBarButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="colorPrimaryDark">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
          <item name="windowNoTitle">true</item>
         <!-- Remove the first white screen -->
        <!--        <item name="android:windowIsTranslucent">true</item>-->
        <!--        <item name="android:windowBackground">@drawable/gradiant</item>-->
        <!--        <item name="android:windowContentOverlay">@null</item>-->
        <!--        <item name="android:windowNoTitle">true</item>-->
        <!--        <item name="android:windowIsFloating">true</item>-->
        <!--        <item name="android:backgroundDimEnabled">false</item>-->
    </style>

    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/fouchia</item>
        <item name="android:textColorSecondary">@color/fouchia</item>
    </style>

    <style name="NoActionBarMaterialTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="android:windowBackground">@drawable/splash</item>-->
    </style>

    <style name="NoActionBarAppCompatTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/color_light_gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SubmitButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:theme">@style/textFontMeduimStyle</item>
        <item name="android:background">@drawable/add_to_cart_selector</item>
    </style>

    <style name="whiteButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:theme">@style/textFontMeduimStyle</item>
        <item name="android:background">@drawable/white_button_action</item>
    </style>

    <style name="whiteButtonWithBorder" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:theme">@style/textFontMeduimStyle</item>
        <item name="android:background">@drawable/white_button_border</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--Input field style-->
    <style name="EditTextStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.AppCompat.EditText">
        <!-- reference our hint & error styles -->
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="android:textColor">@color/light_brown</item>
        <item name="android:textColorHint">@color/color_light_gray</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="colorControlHighlight">@color/green</item>
    </style>

    <style name="LoginEditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="android:textColor">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>


    <style name="CouponEditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CheckoutBlockStyle" >
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="background">@color/white</item>
    </style>

    <style name="TextInputLayoutStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/yellow</item>
        <item name="boxStrokeColor">@color/white</item>

    </style>


    <style name="TextInputLayoutStyleOutline" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/fouchia</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/fouchia</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
    </style>

    <style name="TextInputLayoutStyleRemoveUnderline" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="colorOnSurface">@color/transparent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="hintTextColor">@color/colorPrimary</item>
    </style>


    <style name="AddressEditTextStyleOutline" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/color_checkout_hint</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@color/dark_blue</item>
        <item name="colorControlHighlight">@color/dark_blue</item>
    </style>

    <style name="customFont" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/gotham_book.ttf</item>
    </style>

    <style name="customFont_gotham_medium" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/gothamhttf_medium.ttf</item>
    </style>

    <style name="customFont_gotham_bold" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/gotham_bold2.ttf</item>
    </style>

    <style name="customFont_cairo_regular" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/cairo_regular.ttf</item>
    </style>

    <style name="SerachEditTextStyleOutline" parent="Widget.AppCompat.EditText">
        <item name="android:gravity">center_vertical|left</item>
    </style>

    <style name="addressRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>


    <style name="addAddressInputs" parent="Widget.AppCompat.EditText">
        <item name="background">@drawable/round_adress_input</item>
        <item name="android:textSize">@dimen/_15sdp</item>

    </style>

    <style name="PricesTextStyleOutline" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center_vertical|left</item>
    </style>

    <style name="textDirectionStyle" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center_vertical|left</item>
    </style>


    <style name="sliderRange" parent="Widget.MaterialComponents.Slider">
        <item name="android:textAppearance">@color/focia</item>
        <item name="backgroundTint">@color/focia</item>
    </style>


    <style name="editDirectionStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textDirection">locale</item>
        <item name="android:textAlignment">viewStart</item>
    </style>


    <style name="AppTheme.WhiteAccent">
        <item name="colorAccent">@color/dark_blue</item> <!-- Whatever color you want-->
    </style>

    <style name="RadioTheme" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorControlActivated">@color/pinkishTan</item>
    </style>

    <style name="DialogTheme" parent="android:Theme.Dialog">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>


    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="ErrorDialogTopTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowBackground">@color/colorRedLight_transparent</item>

    </style>

    <!--    <style name="SuccessDialogTopTheme" parent="ThemeOverlay.AppCompat.Dialog">-->
    <!--        <item name="android:windowBackground">@color/colorGreenDark_transparent</item>-->
    <!--    </style>-->

    <style name="InfoDialogTopTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowBackground">@color/colorGrayLight_transparent</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_slid_dwon</item>
        <item name="android:windowExitAnimation">@anim/dialog_slid_up</item>
    </style>

    <style name="textFontMeduimStyle">
        <item name="android:fontFamily">@font/gothamhttf_medium</item>
    </style>

    <style name="textFontBoldStyle">
        <item name="android:fontFamily">@font/gotham_htf_bold</item>
    </style>

    <style name="textFontbookStyle">
        <item name="android:fontFamily">@font/gothamhtf_book</item>
    </style>

    <style name="TabLayoutStyle" parent="TextAppearance.Design.Tab">
        <item name="fontPath">fonts/gothamhtf_book</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="colorAccent">@color/pinkishTan</item>
        <item name="checkedIconTint">@color/pinkishTan</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/round_add_review</item>
        <item name="colorAccent">@color/pinkishTan</item>
        <item name="checkedIconTint">@color/pinkishTan</item>
    </style>

    <style name="RatingBar" parent="Widget.AppCompat.RatingBar.Indicator">
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/dark_blue</item>
        <item name="android:progressTint">@color/dark_blue</item>
    </style>
</resources>
